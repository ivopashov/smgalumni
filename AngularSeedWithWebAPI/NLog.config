<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <extensions>
    <add assembly="NLog.MongoDB"/>
  </extensions>
  <targets>
    <target name="Mongo" type="MongoDB" connectionString="mongodb://localhost/MySite_logs" />
  </targets>
  <rules>
    <logger name="*" minLevel="Trace" appendTo="Mongo"/>
  </rules>
</nlog>